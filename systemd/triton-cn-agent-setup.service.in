[Unit]
Description=Triton cn-agent setup service
Documentation=https://github.com/joyent/linux-live/tree/linuxcn
After=network.target

[Service]
Environment=PATH=/usr/node/bin:/usr/triton/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin
Type=simple
ExecStart=/usr/node/bin/node --abort_on_uncaught_exception @@PREFIX@@/bin/cn-agent &amp;

[Install]
WantedBy=multi-user.target

