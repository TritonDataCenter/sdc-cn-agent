# This script calls the server_sysinfo action.

ip=$1

if [[ -z $ip ]]; then
	echo "Usage: $0 ip " 1>&2
	exit 1
fi

set -eou pipefail

json='{
	"task": "server_sysinfo",
	"params": {
	}
}'

echo "Request:"
echo "$json"

echo ""
echo "Response:"
curl -s -X POST \
	-H "Content-Type: application/json" \
	-H "accept: application/json" \
	-d "$json" http://$ip:5309/tasks | json
