# This script calls the sleep action.

ip=$1
ms=$2

if [[ -z $ip || -z $ms ]]; then
	echo "Usage: $0 ip sleep_ms" 1>&2
	exit 1
fi

set -eou pipefail
. $(dirname "$0")/utils.bash

json='{
	"task": "sleep",
	"params": {
		"timeout": '$ms'
	}
}'

echo "Request:"
echo "$json"

echo ""
echo "Response:"
curl -s -X POST \
	-H "Content-Type: application/json" \
	-H "accept: application/json" \
	-d "$json" http://$ip:5309/tasks | json
